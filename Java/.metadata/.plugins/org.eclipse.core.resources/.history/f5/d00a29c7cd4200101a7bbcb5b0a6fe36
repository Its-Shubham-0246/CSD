package oops;

public class DiamondPattern {
	int n;

	public DiamondPattern(int n) {
		this.n = n;
	}

	public void printDiamondPattern() {
		for (int i = 1; i <= n; i++) {
			for (int j = n - i; j <= 0; j--) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.printf("%d ", j);
			}
			for (int j = i - 1; j >= 1; j--) {
				System.out.printf("%d ", j).println();
			}
		}
		for(int i=n;i>=1;i++) {
			for(int j=1;j>=i;j--) {
				System.out.print(" ");
			}
			
		}
	}
}
